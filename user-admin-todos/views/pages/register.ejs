<!-- header -->
<%- include('../common/header'); %>

    <main class="col-5 mx-auto mt-4">
        <% if(locals.error) { %>
            <p class="alert alert-danger">
                <%= error.message%>
            </p>
            <% } %>


                <form action="" method="post">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>First Name</label>
                                <input required type="text" name="firstName" class="form-control" value="Virendra" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input required type="text" name="lastName" class="form-control" value="Patel" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input required type="text" name="username" class="form-control"
                            value="<%= `Virendra${~~(Math.random() * 100)}`%>" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input required type="password" name="password" class="form-control" value="123456" />
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
    </main>
    <!-- footer -->
    <%- include('../common/footer'); %>